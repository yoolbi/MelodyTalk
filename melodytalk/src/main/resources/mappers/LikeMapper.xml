<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.global.react.mapper.LikeMapper">
	
	<select id="getLikesByPost" resultType="com.global.react.domain.LikeDTO">
		<![CDATA[
			SELECT * FROM LIKES WHERE POST_ID = #{post_id}
		]]>
	</select>
	
	<insert id="insertLike">
		INSERT INTO LIKES (
			LIKE_ID
			,USER_ID
			,POST_ID
		) values (
			#{like_id}
			,#{user_id}
			,#{post_id}
		)
	</insert>
	
	<delete id="deleteLike">
		DELETE LIKES WHERE USER_ID = #{user_id} AND POST_ID = #{post_id}
	</delete>

</mapper>
